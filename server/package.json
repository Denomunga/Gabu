{
  "name": "dr-gabriel-server",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.cjs --format=cjs --external:mongoose --external:express --external:cors --external:dotenv --external:jsonwebtoken --external:bcryptjs",
    "start": "cross-env NODE_ENV=production node dist/index.cjs",
    "check": "tsc --noEmit",
    "seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.7.0",
    "zod": "^3.24.2",
    "multer": "^1.4.5-lts.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "20.19.27",
    "@types/multer": "1.4.7",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  }
}
